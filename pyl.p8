--deck
function init_deck()
    return {1,2,3}
end

function shuffle(deck)
    local result = {}
    while #deck > 0 do
        local i = flr(rnd(#deck)) + 1
        add(result, deck[i])
        deli(deck, i)
    end
    return result
end
